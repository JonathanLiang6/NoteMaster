             xmlns:utils="clr-namespace:NoteMaster.Utils"
             StartupUri="Views/MainWindow.xaml"> <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Themes/LightTheme.xaml"/>
                <ResourceDictionary Source="/Views/Assets/Icons/Icons.xaml"/>
                <ResourceDictionary Source="/Views/Styles/MainStyle.xaml"/>
                <ResourceDictionary Source="/Views/Styles/HomePageStyle.xaml"/>
                <ResourceDictionary Source="/Views/Styles/NoteEditPageStyle.xaml"/>
                <ResourceDictionary Source="/Views/Styles/NotesPageStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <utils:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>